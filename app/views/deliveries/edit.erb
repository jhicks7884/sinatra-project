<%if Helpers.is_logged_in?(session) %>
 <center><h1>Edit a Delivery, <%=current_user.username%> </h1></center>

<ul>
  <% Deliveries.all.each do |deliveries| %>
    <ol style="font-size:165%;">
       <%= deliveries.user_id %>.
       <%= deliveries.name %><br>
       <%= deliveries.address %><br>
       <%= deliveries.content %>

    </ol>
  <% end %>
</ul>

  	<form action="/deliveries/<% current_user.id %>" method="post">

	   <label>Current Deliveries: </label><br>
	   <input type="hidden name="deliveries[user_id]" value="<%=current_user.id%>">
	    Full Name:
	   <input type="text" name="name" value="<%=%>">
      Address:
	   <input type="text" name="address" value="<%=%>">
      Content:
	   <input type="text" name="content" value="<% %>">
      
	   <input type="submit" value="update deliveries"/>

    </form>

